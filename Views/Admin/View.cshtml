
@model AGB_Bank.Models.UpdateProductViewModel

@{
    ViewData["Title"] = "Product Details";
}
@{
    var type = ViewBag.ProductType;
}

<div class="container">
   @*  <h2>Modifier @type Product</h2> *@
    <h2>Modifier le produit</h2>

    <form method="post" action="View" class="mt-5">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="type" value="@type" />
        <div class="form-group">
            <label for="exampleInputEmail1">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Nom</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Description</label>
            <input type="text" class="form-control" id="exampleInputPassword1" asp-for="Description">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Url d'image'</label>
            <input type="text" class="form-control" id="exampleInputPassword1" asp-for="ImageUrl">
        </div>
        <div v class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">modifier</button>
        <button type="submit" class="btn btn-danger"
                asp-action="Delete"
                asp-controller="Admin">
            supprimer
        </button>
    </form>
</div>
